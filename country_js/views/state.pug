extends layout

block content
  .container.mt-5
    h1.text-primary= state.englishName
    h2.text-secondary= state.name

    .card.shadow-lg.mt-4
      .card-body
        table.table.table-bordered
          tbody
            tr
              th Capitale:
              td= state.capital
            tr
              th Popolazione:
              td= state.population
            tr
              th Nome in Giapponese:
              td= state.translations.ja
        a.btn.btn-primary.mt-3(href=state.wiki target="_blank") 🌍 Pagina Wikipedia
